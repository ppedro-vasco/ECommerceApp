@model ECommerceApp.Models.Category

@{
    ViewData["Title"] = "Details Category";
}

<h2>Details Category</h2>

<hr/>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.CategoryId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.Name)
        </dd>
        <dt class="col-sm-2">
