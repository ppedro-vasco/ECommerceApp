@model ECommerceApp.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Product Delete</h2>
<h3>Delete a item of the list is a irreversive act.</h3>

<hr/>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.ProductId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.ProductId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.Price)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Category.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.Category.Name)
        </dd>
    </dl>
</div>

<div class="form-group d-flex justify-content-between align-items-center">
    <a asp-action="Index" class="btn btn-outline-secondary">
            Back
    </a>
    <div class="d-flex gap-2">
        <form asp-action="Delete" asp-route-id="@Model.ProductId">
            @Html.AntiForgeryToken()
            <input type="submit" value="Delete" class="btn btn-danger">
        </form>
    </div>
</div>