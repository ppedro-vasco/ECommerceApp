@model ECommerceApp.Models.Product

@{
    ViewData["Title"] = "Products Category";
}

<h2>Products Category</h2>

<hr/>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.ProductId)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.ProductId)
        </dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">
            @Model.Category.Name
        </dd>
    </dl>
</div>

<div class="form-group d-flex justify-content-between align-items-center">
    <a asp-action="Index" class="btn btn-outline-secondary">
            Back
    </a>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-outline-secondary">Edit</a>
    </div>
</div>